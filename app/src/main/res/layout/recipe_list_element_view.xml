<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="4dp"
             android:layout_marginLeft="8dp"
             android:layout_marginRight="8dp"
             android:layout_marginTop="4dp"
             android:orientation="horizontal"
             android:background="@android:drawable/dialog_holo_light_frame">

    <LinearLayout
        android:id="@+id/recipe_with_image_container_on_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/recipe_image_on_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            tools:srcCompat="@drawable/ic_launcher_background"/>

        <TextView
            android:id="@+id/recipe_name_on_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_margin"
            android:gravity="center_horizontal"
            android:textAppearance="?attr/textAppearanceListItem"
            tools:text="Short name"/>
    </LinearLayout>

    <TextView
        android:id="@+id/recipe_placeholder_on_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/text_margin"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceListItem"
        tools:text="Really short desc"/>

</FrameLayout>
